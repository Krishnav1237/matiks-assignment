<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  
  <!-- Typography -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Design System -->
  <link rel="stylesheet" href="/static/css/reset.css">
  <link rel="stylesheet" href="/static/css/variables.css">
  <link rel="stylesheet" href="/static/css/layout.css">
  <link rel="stylesheet" href="/static/css/components.css">
  <link rel="stylesheet" href="/static/css/utilities.css">
</head>
<body>
  <div class="app-shell">
    
    <!-- Sidebar Navigation -->
    <aside class="app-sidebar">
      <div class="sidebar-header">
        <div class="brand-logo">Matiks Monitor</div>
      </div>
      
      <nav class="sidebar-nav">
        <a href="/" class="nav-item <%= typeof title !== 'undefined' && title === 'Matiks Monitor' ? 'active' : '' %>">
          Dashboard
        </a>
        <a href="/mentions" class="nav-item <%= typeof title !== 'undefined' && title.includes('Mentions') ? 'active' : '' %>">
          Mentions
        </a>
        <a href="/reviews" class="nav-item <%= typeof title !== 'undefined' && title.includes('Reviews') ? 'active' : '' %>">
          App Reviews
        </a>
        <a href="/logs" class="nav-item <%= typeof title !== 'undefined' && title.includes('Logs') ? 'active' : '' %>">
          System Logs
        </a>
      </nav>

      <div class="sidebar-footer" style="padding: 16px; border-top: 1px solid var(--border);">
        <div class="text-xs text-subtle">
          v1.0.0
          <br>
          <span class="status-dot online" style="display: inline-block; margin-right: 4px;"></span> System Online
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="app-main">
      <!-- Top Header Removed for Custom Page Control -->
      <!-- <header class="top-bar"> ... </header> -->

      <!-- Page Content -->
      <div class="content-container">
        <%- body %>
      </div>
    </main>
    
  </div>

  <script src="/static/js/main.js"></script>
</body>
</html>
